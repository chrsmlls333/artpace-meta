{
  "commands": {
    "define": {
      "exifReadSizeBytes": 1000000,
      "includeExtISADTitle": true,
      "fuzzyArtistMatchMinThreshold": 0.57,
      "writeLocalOutputCopy": true,
      "overwritePreviousMetafile": true
    }
  },
  
  "resources": {
    "logsDirectory": "./logs/",
    "artistsAtomTemplateCSV": "./resources/AtomAuthorityRecordsCSV_2020.06.05.csv"
  },

  "apmetaFormat": {
    "path": {
      "ext": ".apmeta.csv",
      "extBackup": ".bak" 
    },
    "fastcsv": {
      "writeOptions": {
        "headers": true,
        "quoteHeaders": false,
        "quoteColumns": {
          "identifier": true,
          "generalNote": true
        }
      },
      "readOptions": {
        "headers": true
      } 
    },
    "libreoffice": {
      "executable": "/Applications/LibreOffice.app/Contents/MacOS/soffice",
      "args": [
        "--calc",
        "--infilter='CSV:44,34,76,1,,1033,true'"
      ]
    }
  }
}